@model testFapi.Models.OrderViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Rekapitulace objednávky";
}

<div class="row text-center">
    <h1 class="mb-0">Rekapitulace objednávky</h1>
</div>
<div class="row justify-content-center">
    <div class="col-3 col-md-1">
        <hr class="mb-md-5"/>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-6">
        <h5>Kontaktní údaje</h5>
        <div>
            @Html.DisplayFor(model => model.FirstName)&nbsp;@Html.DisplayFor(model => model.LastName)<br />
            @Html.DisplayFor(model => model.Email)<br />
            @Html.DisplayFor(model => model.Phone)
        </div>
    </div>
    <div class="col-12 col-md-6 mt-2 mt-md-0">
        <h5>Adresa</h5>
        <div>
            @Html.DisplayFor(model => model.Street),&nbsp;@Html.DisplayFor(model => model.HouseNumber)<br />
            @Html.DisplayFor(model => model.PostalCode)&nbsp;@Html.DisplayFor(model => model.City)
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="table-responsive-sm">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.Price)</th>
                    <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.TotalPrice)</th>
                </tr>
            </thead>
            <tbody>
                <tr id="produkt">
                    <th scope="row">@Html.DisplayFor(model => model.ProductName)</th>
                    <td class="text-center">@Html.DisplayFor(model => model.Quantity)</td>
                    <td class="text-center">@Html.DisplayFor(model => model.Price)</td>
                    <td class="text-center">@Html.DisplayFor(model => model.TotalPrice)</td>
                </tr>
            </tbody>
        </table>
    </div>  
</div>
<div class="row mt-5">
    <div class="col-2 d-flex">
        <a href="javascript: history.go(-1)" class="btn btn-warning align-self-end">Změnit</a>
    </div>
    <div class="col-10 text-end">
        <div id="ceny">
            Cena celkem bez DPH: @Html.DisplayFor(model => model.TotalPrice)<br />
            DPH (@Html.DisplayFor(model => model.TaxRate)%): @Html.DisplayFor(model => model.DPH)<br />
            <h5>Cena celkem: @Html.DisplayFor(model => model.FinalPrice)<br /></h5>
            Cena celkem v EUR: @Html.DisplayFor(model => model.FinalPriceEuro) €
        </div>
    </div>
</div>
